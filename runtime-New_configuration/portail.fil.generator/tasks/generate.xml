    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="portail.fil.generator.libraryclasspath.alljars">
        <pathelement location="../portail.fil.generator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="portail.fil.generator.classpath.alljars">
        <path refid="portail.fil.generator.libraryclasspath.alljars"/>
